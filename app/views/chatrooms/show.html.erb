<div class="chatroom" data-channel-subscribe="chatroom" data-chatroom-id="<%= @chatroom.id %>">
  <h1><%= @chatroom.name %></h1>
  <div id="message-div">
    <% @chatroom.messages.each do |message| %>
      <div class="message <%= message.user.id == current_user.id ? 'my-message ml-auto' : 'other-user-message mr-auto' %>">
        <big><%= message.user.email %></big>
        <br>
        <small><%= message.content %></small>
      </div>
    <% end %>
  </div>

  <div>
    <%= form_tag("/message", method: :post) do %>
      <div class="form-group">
        <%= label_tag(:content, "Write a message:") %>
        <%= text_area_tag(:content, nil, class: "form-control") %>
      </div>
      <%= submit_tag("Send", class: "btn btn-primary", id: "message-send-btn") %>
    <% end %>
  </div>
</div>
